<h1>Update Profile</h1>
<body>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages'%>

    <%= form_for(@user) do |field| %>
        <%= field.label :name %>
        <%= field.text_field :name %>

        <%= field.label :email %>
        <%= field.email_field :email %>

        <%= field.label :password %>
        <%= field.password_field :password %>

        <%= field.label :password_confirmation, "Password Confirmation" %>
        <%= field.password_field :password_confirmation %>
        <%= hidden_field_tag(:acc_id, @user.id) %>
        <%= field.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</body>