
<% if logged_in? %>
<% if logged_in? and params[:acc_type]=='superadmin'%>
    <h1>Create new super admin</h1>
    <% end %>
<% if logged_in? and params[:acc_type]=='admin'%>
        <h1>Create new admin user</h1>

    <% end %>
<% if logged_in? and params[:acc_type]=='user'%>
    <h1>Create a new user</h1>
    <% end %>
<% else %>
        <h1>Sign up</h1>
<% end %>

<body>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages'%>
    <%= form_for @user do |field| %>
        <%= field.label :name %>
        <%= field.text_field :name %>

        <%= field.label :email %>
        <%= field.email_field :email %>

        <%= field.label :password %>
        <%= field.password_field :password %>

        <%= field.label :password_confirmation, "Password Confirmation" %>
        <%= field.password_field :password_confirmation %>
        <% if params[:acc_type].nil? %>
            <%= hidden_field_tag(:acc_type, 'user') %>
            <%= field.submit "Sign Up", class: "btn btn-primary" %>
        <% end %>
        <% if logged_in? and params[:acc_type]=='superadmin'%>
            <%= hidden_field_tag(:acc_type, 'superadmin') %>
            <%= field.submit "Create Super Admin account", class: "btn btn-primary" %>
        <% end %>
        <%if params[:acc_type]=='admin'%>
                <%= hidden_field_tag(:acc_type, 'admin') %>
                <%= field.submit "Create Admin account", class: "btn btn-primary" %>
        <% end %>
        <% if params[:acc_type]=='user' %>
            <%= hidden_field_tag(:acc_type, 'user') %>
            <%= field.submit "Create User account", class: "btn btn-primary" %>
         <% end %>
    <% end %>
  </div>
</div>
</body>