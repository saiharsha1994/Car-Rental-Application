

<h1>Log In</h1>
<body>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |field| %>
        <%= field.label :email %>
        <%= field.email_field :email %>

        <%= field.label :password %>
        <%= field.password_field :password %>

        <%= field.submit "Login", class: "btn btn-primary" %>
    <% end %>
    <p>New user? <%= link_to "Sign up", new_user_path %></p>
  </div>
</div>
</body>